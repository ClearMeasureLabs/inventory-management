@page "/containers/add"
@using Application.Exceptions
@using Application.Features.Containers
@using Application.Features.Containers.CreateContainer
@using Microsoft.AspNetCore.Components.Forms
@inject IContainers Containers
@inject NavigationManager NavigationManager

<PageTitle>Add Container</PageTitle>

<h1>Add Container</h1>

<div class="row">
    <div class="col-md-6">
        @if (!string.IsNullOrEmpty(_errorMessage))
        {
            <div class="alert alert-danger" role="alert">
                @_errorMessage
            </div>
        }

        <EditForm Model="_command" OnValidSubmit="HandleSubmit" FormName="AddContainerForm" method="post">
            <DataAnnotationsValidator />
            <ValidationSummary class="text-danger" />

            <div class="mb-3">
                <label for="name" class="form-label">Name</label>
                <InputText id="name" class="form-control" @bind-Value="_command!.Name" />
                <ValidationMessage For="@(() => _command!.Name)" class="text-danger" />
            </div>

            <div class="mb-3">
                <label for="description" class="form-label">Description</label>
                <InputText id="description" class="form-control" @bind-Value="_command!.Description" />
                <ValidationMessage For="@(() => _command!.Description)" class="text-danger" />
            </div>

            <div class="mb-3">
                <button type="submit" class="btn btn-primary">Create Container</button>
                <a href="/" class="btn btn-secondary ms-2">Cancel</a>
            </div>
        </EditForm>
    </div>
</div>

@code {
    [SupplyParameterFromForm]
    private CreateContainerCommand? _command { get; set; }
    
    private string? _errorMessage;

    protected override void OnInitialized()
    {
        _command ??= new CreateContainerCommand();
    }

    private async Task HandleSubmit()
    {
        if (_command is null) return;
        
        _errorMessage = null;
        
        try
        {
            await Containers.CreateAsync(_command, CancellationToken.None);
            NavigationManager.NavigateTo("/");
        }
        catch (ValidationException ex)
        {
            // Build user-friendly error message from validation errors
            var errorMessages = ex.Errors
                .SelectMany(kvp => kvp.Value)
                .ToList();
            
            _errorMessage = $"Validation failed: {string.Join(", ", errorMessages)}";
        }
    }
}
