@page "/"
@using Application.Features.Containers
@using Application.Features.Containers.CreateContainer
@inject IContainers Containers
@rendermode InteractiveServer

<PageTitle>Ivan</PageTitle>

@if (_containers == null)
{
    <div class="d-flex justify-content-center">
        <div class="spinner-border" role="status">
            <span class="visually-hidden">Loading...</span>
        </div>
    </div>
}
else if (!_containers.Any())
{
    <div class="p-5 mb-4 bg-light rounded-3">
        <div class="container-fluid py-5 text-center">
            <h1 class="display-5 fw-bold">No Containers</h1>
            <p class="col-md-8 mx-auto fs-4">You don't have any containers yet. Create your first container to get started.</p>
            <button class="btn btn-primary btn-lg" type="button" @onclick="ShowAddModal">Add Container</button>
        </div>
    </div>
}
else
{
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1>Containers</h1>
        <button class="btn btn-primary" type="button" @onclick="ShowAddModal">Add Container</button>
    </div>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var container in _containers)
            {
                <tr>
                    <td>@container.ContainerId</td>
                    <td>@container.Name</td>
                </tr>
            }
        </tbody>
    </table>
}

<!-- Add Container Modal -->
@if (_showModal)
{
    <div class="modal fade show" id="addContainerModal" tabindex="-1" aria-labelledby="addContainerModalLabel" style="display: block;" aria-modal="true" role="dialog">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="addContainerModalLabel">Add Container</h5>
                    <button type="button" class="btn-close" @onclick="HideModal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    @if (!string.IsNullOrEmpty(_errorMessage))
                    {
                        <div class="alert alert-danger" role="alert">
                            @_errorMessage
                        </div>
                    }
                    <div class="mb-3">
                        <label for="containerName" class="form-label">Name</label>
                        <input type="text" id="containerName" class="form-control" @bind="_containerName" @bind:event="oninput" placeholder="Enter container name" />
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="HideModal">Cancel</button>
                    <button type="button" class="btn btn-primary" @onclick="HandleCreate" disabled="@_isSubmitting">
                        @if (_isSubmitting)
                        {
                            <span class="spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>
                            <span>Creating...</span>
                        }
                        else
                        {
                            <span>Create</span>
                        }
                    </button>
                </div>
            </div>
        </div>
    </div>
    <div class="modal-backdrop fade show"></div>
}

@code {
    private IEnumerable<ContainerDto>? _containers;
    private string _containerName = string.Empty;
    private string? _errorMessage;
    private bool _isSubmitting;
    private bool _showModal;

    protected override async Task OnInitializedAsync()
    {
        _containers = await Containers.GetAllAsync(CancellationToken.None);
    }

    private void ShowAddModal()
    {
        _containerName = string.Empty;
        _errorMessage = null;
        _showModal = true;
    }

    private void HideModal()
    {
        _showModal = false;
    }

    private async Task HandleCreate()
    {
        _isSubmitting = true;
        _errorMessage = null;

        try
        {
            var command = new CreateContainerCommand { Name = _containerName };
            await Containers.CreateAsync(command, CancellationToken.None);
            _containers = await Containers.GetAllAsync(CancellationToken.None);
            HideModal();
            _containerName = string.Empty;
        }
        catch (Application.Exceptions.ValidationException ex)
        {
            _errorMessage = string.Join("; ", ex.Errors.SelectMany(e => e.Value));
        }
        catch (Exception)
        {
            _errorMessage = "An unexpected error occurred. Please try again.";
        }
        finally
        {
            _isSubmitting = false;
        }
    }
}
